<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
    <div style="display:block;">
      <span style="color:#123456;" class="glyphicon glyphicon-user"><%= message.name %></span>
      </div>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new) do |f| %>
<% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
<div style="display:block;">
  名前:
  <%= f.text_field :name %>
</div>

<div style="display:block; margin-top:5px; ">
  <span style="text-align:left; vertical-align:top;">内容:</span>
  <%= f.text_area :body, :size => "70x5" %>
  </div>
  
  <div style="margin-left:35px;">
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
<% end %>